{% include "./includes/beta-header.nunjucks" %}

<main id="content" role="main" tabindex="-1" class="util-nofocus">
<a href="/search" class="back-to-previous">Back</a>

<h1 class="heading-xlarge">Places near to '{{ location }}'</h1>
  <div class="grid-row">
    <div class="column-two-thirds">
  <p class="lede">The places listed below are currently open. Other places nearby are closed.</p>
    </div>
    </div>
    <table>
      <tbody>
          {% for service in serviceList %}
        <tr>
          <td colspan="2"><span style="font-size: 18px; font-weight: 400;">{{ service.label }}</span></td>
        </tr>
        <tr>
          <td width="50%">
            <span style="font-size: 24px; font-weight: 800;">{{ service.name }}</span>
                <p>
                {{ service.addressLine | join(", ") }}
                <br>
                {% if service.telephone %}
                  Telephone {{ service.telephone }}
                {% endif %}
                </p>
                {% if service.openingTimes %}
                  <p><strong>{{ service.openingTimes.getOpeningHoursMessage(now) }}</strong><br></p>
                {% else %}
                  <p><strong>Opening times unknown</strong><br></p>
                {% endif %}
          </td>
          <td width="50%">
            Distance: {{ service.distanceInMiles | round(1) }} miles
            <br/>
              <a href="https://www.google.com/maps?{{service.googleMapsQuery}}" class="button button-secondary-cta map-button" target="_blank">See on map and get directions</a>

            <br/>
            <p><strong>Estimated journey time: </strong>{{ service.duration }}</p>

        </tr>
        <tr>
          <td colspan="3"><hr></td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
    <div class="grid-row">
      <div class="column-two-thirds">
        <p><a href="results?location={{location}}" class="gotoservice-cta button">See all nearby places that can help, open or closed</a></p>
      </div>
    </div>
</main>

{% include "./includes/footer.nunjucks" %}
