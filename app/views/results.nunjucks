{% extends 'layout.nunjucks' %}

{% block pageTitle %}{{getResultsPageTitle()}}{% endblock %}

{% block meta %}
<meta name="DCSext.ServiceName" content="pharmacies" />
{% endblock %}

{% block bodyClass %}resultsPage{% endblock %}

{% block breadcrumbItems %}
  <li><a href="{{ SITE_ROOT }}/">Find a pharmacy</a></li>
  {% if services.length === 0 %}
  <li class="breadcrumb__last">No results</li>
  {% else %}
  <li class="breadcrumb__last">Results</li>
  {% endif %}
{% endblock %}

{% block content %}
  {% if services.length === 0 %}
    {% include "includes/no-pharmacy-results.nunjucks" %}
  {% else %}

<div class="results__title">
  <h1>Pharmacies near {{ getDisplayLocation() }}</h1>
</div>
<div class="grid-row">
  <p class="viewToggle"><a class="{% if displayOpenResults %}checked{% endif %}" href="{{ resultsPageAltUrl }}">Only show pharmacies open now</a></p>
  <ol class="results">
    {% for service in services %}
        {% include "includes/result-item.nunjucks" %}
    {% endfor %}
  </ol>
  <p class="searchAgain"><a href="{{ SITE_ROOT }}/">Search again</a></p>
  {% include "includes/call-111.nunjucks" %}
  {% endif %}
  </div>

{% endblock %}
