{% extends 'layout.nunjucks' %}

{% block header %}
<h1 class="local-header--title--question">Find a pharmacy</h1>
{% endblock %}

{% block pageTitle %}Find a place that can help you{% endblock %}

{% block content %}

{% if errorMessage %}
<div class="error-summary">
  <h2 class="local-header--error error-summary-heading">
    {{ errorMessage }}
  </h2>
</div>
{% endif %}

<form method="get" class="form" action="{{ SITE_ROOT }}/results">
  <div class="reading-width">
    <div class="form-item-wrapper">

      {% if errorMessage %}
      <div class="form-group error">
        {% else %}

        <div class="error-summary location-error location-hide">
          <h2 class="local-header--error error-summary-heading">
            We’re sorry, but we couldn’t determine your current location.<br /> Please enter your postcode manually.
          </h2>
        </div>

        <div class="form-group">
          {% endif %}
          <label class="form-label-bold" for="location">{{ locationLabel }}</label>

          <div class="form-group">
            <input autocomplete="off" type="text" class="form-control" name="location" id="location" value=""{% if errorMessage %} aria-describedby="error-message" aria-invalid="true"{% endif %}>
            <input type="hidden" name="context" value="{{ context }}">
          </div>
        </div>

        <div class="form-item-wrapper">
          <div class="form-group form-group--submit">
            <input type="submit" class="button submit-search" value="Search">
          </div>
        </div>
        <div class="find-location location-hide">or
          <br />
          <input type="submit" class="button button--uselocation" value="Use current location">
        </div>
        <p><a href="{{ backLink.href }}" class="link-back">{{ backLink.text }}</a></p>
      </div>
    </div>
</form>

{% endblock %}
