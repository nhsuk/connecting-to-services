{
  "name": "connecting-to-services",
  "version": "0.0.1",
  "private": true,
  "description": "Helping to connect people to appropriate services, meeting their time, location and accessibility needs.",
  "engines": {
    "node": "6.x.x"
  },
  "scripts": {
    "build-css": "./css-build",
    "coverage-check": "istanbul check-coverage --config .istanbul.yml",
    "coverage-generate": "yarn istanbul -- cover _mocha -- --recursive",
    "coverage-generate-full": "yarn istanbul -- cover --include-all-sources _mocha -- --recursive",
    "coverage-upload-coveralls": "cat ./coverage/lcov.info | coveralls",
    "git-hook": "yarn lint && yarn coverage-generate && yarn coverage-check",
    "istanbul": "NODE_ENV=test istanbul",
    "lint": "eslint --ext .js,.json .",
    "lint-watch": "esw --watch .",
    "postrewrite": "yarn git-hook",
    "precommit": "yarn git-hook",
    "prepush": "yarn git-hook && yarn snyk test",
    "start": "node app.js",
    "start-watch": "nodemon app.js | ./node_modules/bunyan/bin/bunyan & nodemon -e scss -x yarn build-css -- compact",
    "test": "NODE_ENV=test mocha --recursive test",
    "test-ci": "yarn git-hook && yarn coverage-upload-coveralls",
    "test-watch": "yarn test -- --watch --reporter min"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nhsuk/connecting-to-services.git"
  },
  "bugs": {
    "url": "https://github.com/nhsuk/connecting-to-services/issues"
  },
  "dependencies": {
    "body-parser": "^1.13.3",
    "compression": "^1.7.0",
    "cookie-parser": "^1.3.3",
    "express": "^4.15.4",
    "helmet": "^3.8.1",
    "nhsuk-bunyan-logger": "^1.4.1",
    "node-sass": "^4.5.0",
    "nunjucks": "^3.0.0",
    "object.values": "^1.0.3",
    "on-headers": "^1.0.1",
    "postcode": "^0.2.5",
    "request": "^2.81.0",
    "require-environment-variables": "^1.1.2"
  },
  "devDependencies": {
    "bower": "^1.8.0",
    "chai": "^4.1.1",
    "chai-http": "^3.0.0",
    "cheerio": "^1.0.0-rc.2",
    "coveralls": "^2.11.9",
    "eslint": "^4.4.1",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-config-nhsuk": "^0.3.3",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-mocha": "^4.11.0",
    "eslint-watch": "^3.1.2",
    "husky": "^0.14.2",
    "istanbul": "^0.4.3",
    "mocha": "^3.5.0",
    "nock": "^9.0.14",
    "nodemon": "^1.10.2",
    "proxyquire": "^1.7.10",
    "snyk": "^1.38.3"
  }
}
